void Run_Enable_On(void)
{
	HAL_Delay(2000);
	HAL_GPIO_WritePin(GPIOA, STATUS_LED_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(GPIOA, RUN_ENABLE_Pin, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(PB1_ENABLE_GPIO_Port, PB1_ENABLE_Pin, GPIO_PIN_RESET);
}

//Blink LED and then open circuit to battery
void Off_Sequence(uint8_t NumberOfBlinks)
{
	uint32_t t = 0;
	for(uint8_t i=0; i<NumberOfBlinks; i++)
	{
		HAL_GPIO_WritePin(GPIOA, STATUS_LED_Pin, GPIO_PIN_RESET);

		while (t<2000000)
		{
			t++;
		}
		t=0;

		HAL_GPIO_WritePin(GPIOA, STATUS_LED_Pin, GPIO_PIN_SET);

		while (t<2000000)
		{
			t++;
		}
		t=0;
	}

	HAL_GPIO_WritePin(PB1_ENABLE_GPIO_Port, PB1_ENABLE_Pin, GPIO_PIN_SET);
	HAL_GPIO_WritePin(RUN_ENABLE_GPIO_Port, RUN_ENABLE_Pin, GPIO_PIN_SET);


}


int c = 0;
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	uint32_t delayCount = 0;
	c++;
	while(!HAL_GPIO_ReadPin(PB_1_INPUT_GPIO_Port, PB_1_INPUT_Pin))
	{
		delayCount++;
		if (delayCount >= 5000000)
		{
			Off_Sequence(15);
			///HAL_GPIO_WritePin(RUN_ENABLE_GPIO_Port, RUN_ENABLE_Pin, GPIO_PIN_SET);

		}
	}
	//delayCount=0;
}
